// For devcontainer.json docs, see:
// - https://aka.ms/devcontainer.json
// Resources:
// - https://containers.dev/guide/dockerfile
// - https://github.com/devcontainers/images/tree/main/src/go
{
	"name": "go-example",

	"dockerComposeFile": [
		"../compose.yml",

		// Merge `compose.claude.yml` to include Claude Code
		// Comment this out if you want to exclude
		"./compose.claude.yml"
	],
	"service": "service",
	"workspaceFolder": "/workspace",

	// More info: https://containers.dev/features
	"features": {
		"ghcr.io/devcontainers/features/common-utils:2": {
			"installZsh": "true",
			"username": "vscode",
			"userUid": "1000",
			"userGid": "1000",
			"upgradePackages": "true"
		}
	},

	// Configure tool-specific properties
	"customizations": {
		"vscode": {
			// Set *default* container specific settings.json values on container create.
			"settings": {
				"go.toolsManagement.checkForUpdates": "local",
				"go.useLanguageServer": true,
				"go.gopath": "/go"
			},
			// Add the IDs of extensions you want installed when the container is created.
			"extensions": [
				"golang.Go"
			]
		}
	},

	"mounts": [
		// Volume to preserve command history
		"source=cmdhistory-${devcontainerId},target=/cmdhistory,type=volume"
	],
	"containerEnv": {
		// Workaround to prevent needing to reauth on container rebuild
		// https://github.com/anthropics/claude-code/issues/1736#issuecomment-3113994138
		"CLAUDE_CONFIG_DIR": "/home/vscode/.claude"
	},

	// Command to run after the container is created
	"postCreateCommand": "go version",

	// Set `remoteUser` to `root` to connect as root instead
	// More info: https://aka.ms/dev-containers-non-root
	"remoteUser": "vscode"
}
